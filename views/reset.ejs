<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/bootstrap.ejs')%> <%-include('./partials/header.ejs')%>
  <body>
    <%-include('./partials/nav.ejs')%>
    <div class="create-user">
        <form action="/resetpass" method="POST">
          <h4>Enter Correct Details to Reset Password</h4>
         <ul>
          <li><label for="email">Enter Email(Buyer) Aadhar(Farmer)</label></li>
          <input type="text" id="email" name="email" required />
          <li><label for="pno">Phone number</label></li>
          <input type="text" id="pno" name="pno" required />
          <li><label for="dob">DATE OF BIRTH</label></li>
          <input type="date" id="dob" name="dob" required />
          <li><label for="password">New PASSWORD</label></li>
            <input type="password" id="password" name="password" required />
            <button>Reset</button>
          </ul>
        </form>
  </body>
</html>
