<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/bootstrap.ejs')%>
  <%-include('./partials/header.ejs')%>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script>
    $(document).ready(function(){
      var val=$('.username').text();
     if(val=="Farmer")
     {
      $('#buyer').hide();
     }
     else if(val=="Buyer")
     {
      $('#farmer').hide();
     }
     else{
      $('#buyer').hide();
      $('#farmer').hide();
     }
      $('#button1').click(function(){
        $('#buyer').hide();
        $('#farmer').toggle();
      });
      $('#button2').click(function(){
        $('#farmer').hide();
        $('#buyer').toggle();
      });
    });
  </script>
  <body>
    <%-include("./partials/nav.ejs")%>
    <div class="create-user">
      <li class="type-button"><button id="farmer-button">Farmer</button> <button id="buyer-button">Buyer</button></li>
        <div id="farmer">
          <form action="/createseller" method="POST">
            <h4>Create Farmer account</h4>
           <ul>
            <li><label for="name">Name</label></li>
            <input type="text" id="name" name="name" required />
            <li><label for="aadhar">AAdhar Card Number</label></li>
            <input type="text" id="aadhar" name="aadhar" required />
            <li><label for="kisaan_id">Kisaan Card Number</label></li>
            <input type="text" id="kisaan_id" name="kisaan_id" required />
            <li><label for="pno">Phone Number</label></li>
            <input type="text" id="pno" name="pno" required />
            <li><label for="dob">Date of Birth</label></li>
            <input type="date" id="dob" name="dob" required />
            <li><label for="state">State</label></li>
            <input type="text" id="state" name="state" required />
            <li><label for="password">Password</label></li>
            <input type="password" id="password" name="password" required />
            <li><label for="c-password">Confirm Password</label></li>
            <input type="password" id="c-password" name="c-password" required />
            <button onclick="validate()">Continue</button>
            <li><a href="/">Already have an account?</a></li>
            </ul>
            <script src="/validate.js"> 
            </script>
          </form>
        </div>
        <div id="buyer">
          <form action="/createbuyer" method="POST">
          <h4>Create Buyer account</h4>
        <ul>
          <li><label for="name">Name</label></li>
          <input type="text" id="name" name="name" required />
          <li><label for="aadhar">AAdhar Card Number</label></li>
          <input type="text" id="aadhar" name="aadhar" required />
          <li><label for="email">Email Id</label></li>
          <input type="text" id="email" name="email" required />
          <li><label for="pno">Phone Number</label></li>
          <input type="text" id="pno" name="pno" required />
          <li><label for="dob">Date of Birth</label></li>
          <input type="date" id="dob" name="dob" required />
          <li><label for="state">State</label></li>
            <input type="text" id="state" name="state" required />
          <li><label for="password">Password</label></li>
          <input type="password" id="password" name="password" required />
          <li><label for="c-password">Confirm Password</label></li>
          <input type="password" id="c-password" name="c-password" required />
          <button onclick="validate()">Continue</button>
          <li><a href="/">Already have an account?</a></li>
        </ul>
        <script src="/validate.js"></script>
        </form>
      </div>
    </div>
</html>