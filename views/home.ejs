<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/bootstrap')%> <%-include('./partials/header.ejs')%>
  <body>
    <%-include('./partials/nav.ejs')%>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Ongoing Auctions</h1>
          <form action="/search" method="get">
            <input
              id="search"
              name="search"
              type="text"
              placeholder="Filter by seller,state, crop, price, quantity, date"
            />
          </form>
        </div>
      </div>
    </div>
    <br />
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped">
            <head>
              <tr>
                <th><label for="crop-image">Crop Image</label></th>
                <th>
                  <label for="seller-name">Seller Name</label>
                </th>
                <th>
                  <label for="crop-name">Crop Name</label>
                </th>
                <th><label for="state">State</label></th>
                <th>
                  <label for="crop-description">Crop Description</label>
                </th>
                <th><label for="Base-price">Base Price(per Kg)</label></th>
                <th><label for="quantity">Total Quantity</label></th>
                <th><label for="crop-category">Crop Category</label></th>
                <th><label for="start-date">Start Date</label></th>
                <th><label for="end-date">End Date</label></th>
              </tr>
            </head>
            <%if(crops.length>=1){%> <%crops.forEach(crop=>{ %>
            <tr>
              <div class="rows">
                <th>
                  <a href="/bids/<%=crop._id%>">
                    <img
                      style="width: 300px"
                      src="data:image/<%=crop.crop_image.contentType%>;base64,
                      <%=crop.crop_image.data.toString('base64')%>"
                  /></a>
                </th>
                <th><a href="/bids/<%=crop._id%>"><%=crop.sellerName%></a></th>
                <th><a href="/bids/<%=crop._id%>"><%=crop.name%></a></th>
                <th><a href="/bids/<%=crop._id%>"><%=crop.state%></a></th>
                <th><a href="/bids/<%=crop._id%>"><%=crop.description%></a></th>
                <th><a href="/bids/<%=crop._id%>"><%=crop.basePrice%></a></th>
                <th><a href="/bids/<%=crop._id%>"><%=crop.quantity%></a></th>
                <th><a href="/bids/<%=crop._id%>"><%=crop.category%></a></th>
                <th><a href="/bids/<%=crop._id%>"><%=crop.startDate%></a></th>
                <th><a href="/bids/<%=crop._id%>"><%=crop.endDate%></a></th>
              </div>
            </tr>
            <%})}%>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
